<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserInformationFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/AvatarImageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/ic_action_account_circle_40"
            />

        <TextView
            android:id="@+id/UserNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AvatarImageView"
            android:text="UserName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/UserEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserNameTextView"
            android:text="Email"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/UserPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserEmailTextView"
            android:text="Phone"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/UserAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserPhoneTextView"
            android:text="Address"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/UserIntroductionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserAddressTextView"
            android:text="Introduction"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/UserRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserIntroductionTextView"
            android:text="Rate"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/EditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserRateTextView"
            android:text="Edit" />
    </RelativeLayout>

</FrameLayout>